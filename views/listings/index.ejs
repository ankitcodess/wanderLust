
<% layout("./layouts/boilerplate.ejs") -%>

 

<body>
    <h3> All listings</h3>
    <br>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">

           <%   for(let data of alldata){ %>
            <a href="/listings/<%= data._id%>" class="listing-link">
    <div class="card col listing-card" >
  <img src="<%= data.image %>" class="card-img-top" alt="listing_image" style="height: 20rem">
    
  <div class="card-body">
    <p class="card-text">
      <b>  <%=data.title%><br> </b>
       &#8377; <%=data.price.toLocaleString("en-IN")%> /night
    </p>
  </div>
</div>
</a>
 <% } %>

    </div>
  
</body>
